---
import { Image } from 'astro:assets';

const technologies = [
  "react",
  "typeScript",
  "tailwindcss",
  "next",
  "nodejs",
  "HTML5",
  "CSS3",
  "javaScript",
  "git",
  "mySQL",
  "MongoDB",
  "bash",
  "golang"
];

const blockchains = [
  "bitcoin",
  "namecoin",
  "solana",
  "ethereum",
  "polygon",
  "fantom",
  "binance",
  "dai",
  "uniswap",
  "aptos",
  "sui",
]

const devops = [
  "terraform",
  "gitHub Actions",
  "jenkins",
  "teamCity",
  "new Relic",
  "docker",
  "kubernets",
  "ansible",
  "gitLab",
  "grafana",
  "prometheus",
]
---

<div class="relative overflow-x-hidden py-8">
  <div class="pointer-events-none absolute inset-y-0 left-0 w-32 bg-gradient-to-r from-[var(--background)] to-transparent z-20">
  </div>
  <div class="pointer-events-none absolute inset-y-0 right-0 w-32 bg-gradient-to-l from-[var(--background)] to-transparent z-20">
  </div>

  <div class="flex flex-col gap-8">
    <div
      class="flex animate-scroll hover:animate-paused gap-12 md:gap-20 w-max"
      data-aos="fade-zoom-in"
      data-aos-easing="ease-in-back"
      data-aos-delay="1400"
      data-aos-offset="0"
    >
      {
        [...technologies, ...technologies, ...technologies].map((tech) => (
          <div class="flex items-center gap-2 group transition-all duration-300">
            <Image
              src={`/svg/${tech.toLowerCase()}.svg`}
              alt={tech.toLowerCase()}
              class="h-7 w-auto object-contain transition-transform group-hover:scale-110 opacity-60"
              width="30"
              height="30"
              loading="eager"
            />
            {/* <img
              src={`/svg/${tech.toLowerCase()}.svg`}
              alt={tech.toLowerCase()}
              class="h-7 w-auto object-contain transition-transform group-hover:scale-110 opacity-60"
              width="30"
              height="30"
              loading="lazy"
            /> */}
            <span class="text-lg font-medium text-[var(--white-icon)]">
              {tech.charAt(0).toUpperCase() + tech.slice(1)}
            </span>
          </div>
        ))
      }
    </div>
    <div
      class="flex animate-scroll-reverse hover:animate-paused gap-12 md:gap-20 w-max"
      class="flex animate-scroll hover:animate-paused gap-12 md:gap-20 w-max"
      data-aos="fade-zoom-in"
      data-aos-easing="ease-in-back"
      data-aos-delay="1600"
      data-aos-offset="0"
    >
      {
        [...blockchains, ...blockchains, ...blockchains].map((tech) => (
          <div class="flex items-center gap-2 group transition-all duration-300">
            <Image
              src={`/svg/${tech.toLowerCase()}.svg`}
              alt={tech}
              class="h-7 w-auto object-contain transition-transform group-hover:scale-110 opacity-60"
              width="30"
              height="30"
              loading="eager"
            />
            {/* <img
              src={`/svg/${tech.toLowerCase()}.svg`}
              alt={tech}
              class="h-7 w-auto object-contain transition-transform group-hover:scale-110 opacity-60"
              width="30"
              height="30"
              loading="lazy"
            /> */}
            <span class="text-lg font-medium text-[var(--white-icon)]">
              {tech.charAt(0).toUpperCase() + tech.slice(1)}
            </span>
          </div>
        ))
      }
    </div>
    <div
      class="flex animate-scroll hover:animate-paused gap-12 md:gap-20 w-max"
      data-aos="fade-zoom-in"
      data-aos-easing="ease-in-back"
      data-aos-delay="1800"
      data-aos-offset="0"
    >
      {
        [...devops, ...devops, ...devops].map((tech) => (
          <div class="flex items-center gap-2 group transition-all duration-300">
            <Image
              src={`/svg/${tech.toLowerCase()}.svg`}
              alt={tech}
              class="h-7 w-auto object-contain transition-transform group-hover:scale-110 opacity-60"
              width="30"
              height="30"
              loading="eager"
            />
            {/* <img
              src={`/svg/${tech.toLowerCase()}.svg`}
              alt={tech}
              class="h-7 w-auto object-contain transition-transform group-hover:scale-110 opacity-60"
              width="30"
              height="30"
              loading="lazy"
            /> */}
            <span class="text-lg font-medium text-[var(--white-icon)]">
              {tech.charAt(0).toUpperCase() + tech.slice(1)}
            </span>
          </div>
        ))
      }
    </div>
  </div>
</div>

<style is:global>
  @keyframes scroll {
    from {
      transform: translateX(0);
    }
    to {
      transform: translateX(-50%);
    }
  }
  .animate-scroll {
    animation: scroll 160s linear infinite;
  }

  @media (min-width: 768px) {
    .animate-scroll {
      animation-duration: 150s;
    }
  }

  .animate-scroll-reverse {
    animation: scroll 160s linear infinite;
    animation-direction: reverse;
  }

  @media (min-width: 768px) {
    .animate-scroll-reverse {
      animation-duration: 150s;
    }
  }
</style>
